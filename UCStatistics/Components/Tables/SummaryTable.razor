@using UCStatistics.Shared.DTOs
<table class="table table-striped">
    <thead>
        <tr>
            <th>Area</th>
            <th>City</th>
            <th>Office</th>
            <th>Total Tickets</th>
            <th>Avg Service (sec)</th>
        </tr>
    </thead>
    <tbody>
        @if (Data?.Any() != true)
        {
            <tr><td colspan="5" class="text-center">No data available</td></tr>
        }
        else
        {
            @foreach (var item in Data)
            {
                <tr>
                    <td>@item.Level3Name</td>
                    <td>@item.Level2Name</td>
                    <td>@item.OfficeName</td>
                    <td>@item.TotalTickets</td>
                    <td>@item.AvgServiceSeconds:F2</td>
                </tr>
            }
        }
    </tbody>
</table>

@code {
    [Parameter]
    public IEnumerable<SummaryDto> Data { get; set; } = Enumerable.Empty<SummaryDto>();
}
